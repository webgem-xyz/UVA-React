{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // "**/node_modules": true,
    // "**/node_modules/**": true
  },
  "eslint.options": {
    "rules": {
      "react/prefer-stateless-function": [0,
        {
          "ignorePureComponents": "true"
        }
      ],
      "indent": ["error", 2],
      "react/jsx-indent-props": [2, 2],
      "react/sort-comp": [ 1,
        { "order": [
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
          ]
        }
      ]
    }
  },
  "files.associations": {
    "*.js": "javascriptreact"
  }
}